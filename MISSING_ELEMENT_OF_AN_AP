class Solution{   
public:
   int findMissing(int arr[], int n) {
     float sum;
     int sum1 =0;
     float x=n+1;
     
     int d;
     for(int i=0;i<n;i++)
     {
         int a=arr[0];
          d=(arr[n-1]-a)/n;
          if(arr[i+1]-arr[i]!=d){
              return (arr[i]+d);
          }
        
     }
        
    }
};
