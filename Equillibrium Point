class Solution{
    public:
    // Function to find equilibrium point in the array.
    // a: input array
    // n: size of array
    int equilibriumPoint(long long a[], int n) {
    
       long long sum=0;
       long long rightsum=0;
       for(int i=0;i<n;i++){
           sum+=a[i];
       }
       for(int i=0;i<n;i++){
           sum-=a[i];
           if(sum==rightsum){
               return i+1;
           }
           rightsum+=a[i];
       }
       return -1;
    }

};
