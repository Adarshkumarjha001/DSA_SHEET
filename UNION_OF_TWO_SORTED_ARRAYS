//{ Driver Code Starts
#include <bits/stdc++.h>
using namespace std;


// } Driver Code Ends
class Solution{
    public:
    //arr1,arr2 : the arrays
    // n, m: size of arrays
    //Function to return a list containing the union of the two arrays. 
    vector<int> findUnion(int arr1[], int arr2[], int n, int m)
    {
      vector<int>ans;
        vector<int>temp;
        set<int>s;
        for(int i=0;i<n;i++)
            temp.push_back(arr1[i]);
        for(int i=0;i<m;i++)
            temp.push_back(arr2[i]);
        for(int i:temp)
            s.insert(i);
        for(int i:s)
            ans.push_back(i);
        return ans;
    }
};
